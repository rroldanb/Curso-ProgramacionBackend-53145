<div class="container filterContainer mt-2 py-2 gx-4" style="background-color: rgb(193, 193, 193);">
    <div class="d-flex flex-column p-2 mx-1 ">

  <label for="category">  Filtrar por Categoría:</label>
  <select id="category" name="category">
    <option value="todas">Todas</option>
    {{#each categoryArray}}
      <option value="{{this}}">{{this}}</option>
    {{/each}}
  </select>
    </div>
    <div class="d-flex flex-column p-2 mx-1">
  <label for="disponibilidad">Filtrar por Disponibilidad:</label>
  <select id="disponibilidad" name="disponibilidad">
    <option value="todas">Todas</option>
    <option value=true>Disponibles</option>
    <option value=false>No disponibles</option>
  </select>
    </div>
    <div class="d-flex flex-column p-2 mx-1">
  <label  for="orden">Ordenar por precio:</label>
  <select id="orden" name="orden">
    <option value="todas">Sin orden</option>
    <option value=1>Ascendente</option>
    <option value=-1>Descendente</option>
  </select>
    </div>
    <div class="d-flex flex-column p-2 mx-1">
        <label for="productsPPage">Productos por página:</label>
          <select id="productsPPage" name="productsPPage">
    <option value="4">4</option>
    <option value="10">10</option>
    <option value="20">20</option>
  </select>
    </div>
    <button id="applyFiltersBtn" class="btn btn-warning btn-sm"> Aplicar los filtros</button>
</div>

<script> window.urlBase="{{urlBase}}"</script>
<script src="/js/filters.js"></script>