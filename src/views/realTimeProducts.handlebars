<main>
  <div class="bienvenida">
    <h1>Hola {{username}} Bienvenido a nuestro e-commerce</h1>
    <h2> {{nombre}} {{apellido}} Aquí se pueden editar los productos</h2>
  </div>
  <div>
    {{#if admin}}
      <div class="container">
        {{#each products}}
          <div class="card" id="product-{{@index}}">

            <div class="thumbnail-display-area">
              <img class="main-image" src="{{this.thumbnails.[0]}}" alt="Imagen principal del producto">
              <p class="detail-item"> Ruta Imagen:</p>
              <input class="main-image-path" type="text" value="{{this.thumbnails.[0]}}">
            </div>

            <div class="thumbnails">
              {{#each this.thumbnails}}
                <img class="thumbnail" src="{{this}}" alt="Thumbnail del producto">
              {{/each}}
            </div>
            <div class="details-area">

            <p class="detail-item">Title: <input type="text" value="{{this.title}}"></p>
            <p class="detail-item">Descripción: <input type="text" value="{{this.description}}"></p>
            <p class="detail-item">Código: <input type="text" value="{{this.code}}"></p>
            <p class="detail-item">Precio: <input type="text" value="{{ this.price}}"></p>
            {{!-- <p class="detail-item">Estado: <input type="text" value="{{#if this.status}} Disponible {{else}} No disponible {{/if}}"></p> --}}
            <p class="detail-item chk-boton">Activo: <input type="checkbox" {{#if this.status}} checked {{/if}} id="btn-switch"><label for="btn-switch" class="lbl-switch"></label></p>
            <p class="detail-item">Stock: <input type="text" value="{{this.stock}}"></p>
            <p class="detail-item">Categoría: <input type="text" value="{{this.category}}"></p>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
    <div class="container">

      <h2 style="color: rgb(177, 24, 24);">Necesitas permisos de administrador para editar los productos</h2>
    </div>
    {{/if}}
  </div>
</main>
<script src="/js/editProducts.js"></script>
