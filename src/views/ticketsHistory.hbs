<main>
  <div class="container mt-4">
    <div class="bienvenida mt-4 bg-info p-2 rounded-4">
      <h2>Tickets de <strong>{{nombre}} {{apellido}}</strong></h2>
      <h1 class="text-center text-wrap">Hola {{username}}, aquí están tus tickets de compra anteriores</h1>
    </div>

    <div class="container bg-warning bg-gradient rounded-4 mt-4">
      <h1 class="mt-2">Listado de Tickets</h1>
<div class="container">

      {{#if tickets.length}}
        <table class="table-tickets  mt-2">
          <thead>
            <tr>
              <th>Código del Ticket</th>
              <th>Fecha de Compra</th>
              <th>Monto</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each tickets}}
              <tr id="{{_id}}">
                <td>{{this.code}}</td>
                <td>{{formatDate this.purchase_datetime}}</td>
                <td>{{toPesos this.amount}}</td>
                <td>
                  <form action="/carts/:cid/tickets{{_id}}" method="GET">
                    <button class="btn btn-primary" type="submit"><i class="bi bi-search me-2"></i>Revisar Ticket</button>
                  </form>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      {{else}}
        <div class="tickets-vacio">
          <h2 class="text-dark">No tienes tickets de compra <i class="bi bi-emoji-frown"></i></h2>
        </div>
      {{/if}}
</div>

      <button class="btn btn-dark mt-4 mb-4" type="button" onclick="window.history.back();">
        <i class="bi bi-shop-window me-2"></i>Volver a la tienda 
      </button>

    </div>
  </div>

  <footer class="container">
    <p class="texto-footer mx-auto text-light">© 2024 Gagolabs</p>
  </footer>
</main>
